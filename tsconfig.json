{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
        ],
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        "moduleResolution": "node",
    },
    "include": [
        "./*.ts",
        "./*.js",
        "./*.cjs",
        "./*.d.ts",
        "./.commitlintrc.js"
    ],
}
