{
    "compilerOptions": {
        "composite": true,
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
        ],
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types",
        ],
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.cjs",
        "src/**/*.d.ts",
        "./package.json",
    ],
}
