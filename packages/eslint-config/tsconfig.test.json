{
    "compilerOptions": {
        "composite": true,
        "allowJs": true,
        "checkJs": true,
        "lib": [
            "esnext"
        ],
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        // "types": ["vitest"]
        "baseUrl": ".",
        "paths": {
            "@useinsider/eslint-config": [
                "src/main"
            ],
        },
        "typeRoots": [
            "./node_modules/@types",
            "./tests/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.cjs",
        "src/**/*.d.ts",
        "tests/**/*.ts",
        "tests/**/*.js",
        "tests/**/*.cjs",
        "tests/**/*.d.ts",
    ],
    "exclude": [
        "./tests/**/test/**/*"
    ]
}
