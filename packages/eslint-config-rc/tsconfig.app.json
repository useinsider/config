{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "target": "ES2020",
        "module": "Node16",
        "lib": [
            "ES2020",
        ],
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        "moduleResolution": "Node16"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.cjs",
        "src/**/*.d.ts",
    ],
}
