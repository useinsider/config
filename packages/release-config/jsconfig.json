{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": ["./**/*.js"],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
